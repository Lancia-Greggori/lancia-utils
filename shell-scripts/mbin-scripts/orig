#!/bin/sh -eu

[ "$#" -eq 0 ] && exit 1

. /usr/local/subr/io.subr

for file in "$@"; do
	[ ! -f "$file" ] && {
		print_error "\"$file\" is not a file"
		exit 2
	}
done

for file in "$@"; do
	NUM=1
	while true; do
		[ $NUM -eq 1000 ] && exit 3
		[ -e "${file}.original.${NUM}" ] && NUM=$((NUM+1)) && continue
		break
	done
	cp -v "$file" "${file}.original.${NUM}"
done
