#!/bin/sh -eu

for file in "$@"; do
	[ ! -f "$file" ] && exit 1
done

. /usr/local/subr/io.subr

OUTPUT=''
TARGET=''
PERM=''

case "$PROGRAM_NAME" in
	li) TARGET='/home/lancia/.lsr/lmbin'; PERM=0755 ;;
	ui) TARGET='/usr/local/umbin'; PERM=0755 ;;
	si) TARGET='/usr/local/subr'; PERM=0644 ;;
	eii) TARGET='/etc/init.d'; PERM=0755 ;;
esac

if [ -n "$TARGET" ]; then

	for file in "$@"; do
		echo "$file --> $TARGET"
		install -m "$PERM" "$file" "$TARGET"
	done

else

	for file in "$@"; do
		if OUTPUT="$(grep -m1 "^$(readlink -f "$file"):" /letc/global-filelist)"; then
			TARGET="$(echo "$OUTPUT" | cut -d':' -f2)"
			PERM="${OUTPUT##*:}"
			file="${file%%:*}"
			echo "$file --> $TARGET" | sed 's|/mnt/storage/encrypted|/home|g'
			install -m "$PERM" "$file" "$TARGET"
		else
			print_error "file \"$file\" not found in /letc/global-filelist"
			exit 2
		fi
	done

fi
