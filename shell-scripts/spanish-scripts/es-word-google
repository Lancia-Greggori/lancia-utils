#!/bin/sh -u

[ "$#" -eq 0 ] && exit 1

. /usr/local/subr/download.subr

OUTPUT=''
extract()
{
	curl_command "$1" | grep -o 'class="YrbPuc">[^<]\+' | sed -e 's/[^>]*>//' -e 's/&#183;/./g'
}

if [ "$#" -eq 1 ]; then

	printf '%s: ' "$word"
	OUTPUT="$(extract "https://google.com/search?q=${1}+significado")"
	[ -z "$OUTPUT" ] && echo '[ERROR]'

else

	for word in "$@"; do

		printf '%s: ' "$word"
		OUTPUT="$(extract "https://google.com/search?q=${word}+significado")"
		[ -z "$OUTPUT" ] && echo '[ERROR]'

	done

fi
