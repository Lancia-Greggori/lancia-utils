#!/bin/bash -eu

[ "$#" -eq 0 ] && exit 1

. /usr/local/subr/download.subr

OUTPUT=''

for word in "$@"; do

	word="${word/./}"

	OUTPUT="$(curl_command "https://google.com/search?q=${word}+significado" | grep -o 'class="YrbPuc">[^<]\+' | sed -e 's/[^>]*>//' -e 's/&#183;/./g')"
	[ -z "$OUTPUT" ] && OUTPUT='[ERROR]'
	printf '%s: %s\n' "$word" "$OUTPUT"

done
