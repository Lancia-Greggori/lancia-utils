runtime! archlinux.vim

set nocompatible
set ttymouse=""
set mouse=""
set shortmess=aI
set formatoptions=crql

map <C-q> :q!<nl>

nnoremap <C-s> :w<nl>
nnoremap <C-x> :q<nl>
nnoremap <C-z> <undo>
nnoremap <C-n> :bn<nl>
nnoremap <C-m> :bp<nl>
nnoremap <C-d> :ex .<nl>

inoremap <C-s> <Esc>
inoremap <C-p> <Esc>p<insert>
inoremap <C-z> <Esc><undo><insert>
inoremap <C-e> <Esc>A
inoremap <C-a> <Esc>0i

vnoremap <C-s> <Esc>

if ($USER == 'lancia')
	source /home/lancia/.vimconf
endif
